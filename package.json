{
  "name": "aws-network-mapper",
  "version": "1.0.3",
  "description": "AWS Network Topology Mapper - Desktop Application",
  "author": "schylerchase",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.awsmapper.app",
    "productName": "AWS Network Mapper",
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "export-aws-data.sh",
      "assets/**/*",
      "logo.jpg",
      "logo.png"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "schylerchase",
      "repo": "aws_mapper"
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
}
