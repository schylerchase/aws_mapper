{
  "name": "aws-network-mapper",
  "version": "1.5.0",
  "description": "AWS Network Topology Mapper - Desktop Application",
  "author": {
    "name": "schylerchase",
    "email": "schylerchase@users.noreply.github.com"
  },
  "homepage": "https://github.com/schylerchase/aws_mapper",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node build.js && electron .",
    "watch": "node build.js --watch",
    "bundle": "node build.js",
    "bundle:prod": "node build.js --production",
    "build": "npm run bundle:prod && electron-builder",
    "build:mac": "npm run bundle:prod && electron-builder --mac",
    "build:win": "npm run bundle:prod && electron-builder --win",
    "build:linux": "npm run bundle:prod && electron-builder --linux"
  },
  "build": {
    "appId": "com.awsmapper.app",
    "productName": "AWS Network Mapper",
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "export-aws-data.sh",
      "export-aws-data.ps1",
      "xlsx.bundle.min.js",
      "libs/**",
      "dist/**",
      "src/styles/**",
      "src/data/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "schylerchase",
      "repo": "aws_mapper"
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.3"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
}
